<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="book_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="circular">
        <item name="cornerSize">0%</item>
    </style>

    <style name="add_new_textStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabLayoutTheme">
        <item name="colorSurface">#00FFFFFF</item>
        <item name="colorPrimary">@color/button_color</item>
    </style>

    <style name="AppBarLayoutTheme">
        <item name="colorSurface">#00FFFFFF</item>
    </style>

    <style name="sign_up_field_right_attr_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/profile_font_size</item>
    </style>

    <style name="leftField_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/profile_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rightField_profile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">@dimen/profile_font_size</item>
    </style>

    <style name="roomItemFields_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="POSDialogStyle">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="elevation">@dimen/evaluation</item>
<!--        <item name="android:windowEnterAnimation">@anim/animate_zoom_enter</item>-->
<!--        <item name="android:windowExitAnimation">@anim/animate_zoom_exit</item>-->
<!--        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
    </style>

    <dimen name="evaluation">100dp</dimen>
</resources>